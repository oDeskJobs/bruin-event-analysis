#:kivy 1.4.1

#:set bg_color (.5, .5, .5)
#:set box_color (.75, .75, .75)
#:set txt_color (0, 0, 0, 1)
#:set header_height 24
#:set grid_spacing 7
#:set listbox_spacing 2



<MainView>:
    visualizer: visualizer
    transient_box: transient_box
    behavior_box: behavior_box
    bout_id_box: bout_id_box
    transition_box: transition_box
    event_box: event_box
    legend_box: legend_box
    session_box: session_box
    subject_box: subject_box

    canvas:
        Color:
            rgb: bg_color
        Rectangle:
            pos: root.pos
            size: root.size
    BoxLayout:
        pos: root.pos
        size: root.size
        orientation: 'vertical'
        padding: grid_spacing
        spacing: grid_spacing

        # layout containing the five list boxes on the top row
        BoxLayout:
            size_hint: (1, .22)
            orientation: 'horizontal'
            spacing: grid_spacing
            BoxWithHeader:
                title: "Sessions"
                id: session_box
                size_hint: (.2,1)
                add_button_callback: root.add_session
            BoxWithHeader:
                title: "Subjects"
                id: subject_box
                size_hint: (.2, 1)
                add_button_callback: root.add_subject
            BoxLayout:
                orientation: 'vertical'
                spacing: grid_spacing
                size_hint: (.6, 1)
                Header:
                    text: "Input Files"
                BoxLayout:
                    size_hint: (1, 1)
                    orientation: 'horizontal'
                    spacing: grid_spacing
                    BoxLayout:
                        orientation: 'vertical'
                        spacing: grid_spacing
                        size_hint: (.5, 1)
                        BoxWithHeader:
                            id: transient_box
                            title: "Transients"
                            size_hint: (1,1)
                            add_button_callback: root.prompt_for_transient_file
                            remove_button_callback: root.remove_transient_button
                    BoxLayout:
                        orientation: 'vertical'
                        spacing: grid_spacing
                        size_hint: (.5, 1)
                        BoxWithHeader:
                            id: behavior_box
                            title: "Behavior"
                            size_hint: (1,1)
                            add_button_callback: root.prompt_for_behavior_file
                            remove_button_callback: root.remove_behavior_button


        # layout containing the processing options
        BoxLayout:
            size_hint: (1, .33)
            orientation: 'vertical'
            spacing: grid_spacing
            Header:
                text: "Processing Options"
            BoxLayout:
                orientation: 'horizontal'
                spacing: grid_spacing
                BoutIDBox:
                    id: bout_id_box
                    size_hint: (.33, 1)
                TransitionIDBox:
                    id: transition_box
                    size_hint: (.33,1)
                EventMatchingBox:
                    id: event_box
                    size_hint: (.33,1)


        # layout containing the visualization panel
        BoxLayout:
            size_hint: (1, .45)
            orientation: 'horizontal'
            spacing: grid_spacing
            Plot:
                id: visualizer
                size_hint: (1, 1)
            BoxWithHeaderNoAdd:
                id: legend_box
                title: "Available Series"
                size_hint: (None, 1)
                size: (root.legend_width, 100)

<VariablePairsBox>:
    layout: layout
    ScrollView:
        size_hint: (1, None)
        size: root.size
        do_scroll_x: False
        scroll_distance: 3
        scroll_timeout: 50

        GridLayout:
            id: layout
            size_hint: (1, None)
            cols: 1
            spacing: listbox_spacing
            orientation: 'vertical'
            spacing: header_height + listbox_spacing
            Button:
                text: 'Add Item'
                on_press: root.get_variable_pair()
                height: header_height
                size_hint: (1,None)

<ListBox>:
    layout: layout
    ScrollView:
        size_hint: (1, None)
        size: root.size
        do_scroll_x: False
        scroll_distance: 3
        scroll_timeout: 50

        GridLayout:
            id: layout
            size_hint: (1, None)
            cols: 1
            spacing: header_height + listbox_spacing

<VariablesList>:
    size_hint: (1, None)
    cols: 1
    orientation: 'vertical'
    spacing: listbox_spacing
    row_default_height: 30

<VariableBox>:
    variable_list: variable_list
    ScrollView:
        size_hint: (1, None)
        size: root.size
        do_scroll_x: False
        scroll_distance: 3
        scroll_timeout: 50
        VariablesList:
            id: variable_list
            preserve_button_state: True

<VariablePair>:
    toggle_button: toggle_button
    orientation: 'horizontal'
    Button:
        text: '-'
        on_press: root.remove_item()
        height: header_height
        width: 30
        size_hint: (None, None)
    ToggleButton:
        id: toggle_button
        height: header_height
        text: 'No Variables Chosen'
        size_hint: (1., None)


<VariablePairer>:
    variable_panel_1: variable_panel_1
    variable_panel_2: variable_panel_2
    current_pick_1: variable_panel_1.current_radio_button
    current_pick_2: variable_panel_2.current_radio_button
    dismiss_button: dismiss_button
    orientation: 'vertical'
    padding: 10
    spacing: 10
    BoxLayout:
        orientation: 'horizontal'
        spacing: 50
        ScrollView:
            size_hint: (1, 1)
            size: root.size
            do_scroll_x: False
            scroll_distance: 3
            scroll_timeout: 50
            VariablesList:
                id: variable_panel_1
                preserve_button_state: True
                radio_button_mode: True
                on_current_radio_button: root.current_pick_1 = self.current_radio_button
        ScrollView:
            size_hint: (1, 1)
            size: root.size
            do_scroll_x: False
            scroll_distance: 3
            scroll_timeout: 50
            VariablesList:
                id: variable_panel_2
                preserve_button_state: True
                radio_button_mode: True
    Button:
        id: dismiss_button
        text: 'OK'
        size_hint_x: .8
        size_hint_y: .2

            
<GetItemName>:
    BoxLayout:
        orientation: 'vertical'
        pos: root.pos
        size: root.size
        spacing: 10
        padding: 10
        Label:
            size_hint_y: .15
            font_size: root.size[1]*.08
            valign: 'middle'
            halign: 'left'
            #bold: True
            text: 'Please Enter Item Name:'
        TextInput:
            size_hint_y: .4
            multiline: False
            focus: True
            text: root.text
            on_text: root.text = args[1]
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: .4
            Widget:
                size_hint_x: .2
                size_hint_y: 1
            Button:
                text: 'OK'
                size_hint_x: .6
                size_hint_y: .9
                on_release: root.ok = True
            Widget:
                size_hint_x: .2
                size_hint_y: 1

<LoadSave>:
    BoxLayout:
        orientation: 'vertical'
        pos: root.pos
        size: root.size
        spacing: 10
        padding: 20
        BoxLayout:
            orientation: 'horizontal'
            spacing: 20
            Button:
                text: 'Load Existing'
                size_hint: (.5, .9)
                on_release: root.show_load()
                on_state: root.ok = True
            Button:
                text: 'Save New'
                size_hint: (.5, .9)
                on_release: root.show_save()
                on_state: root.ok = True
        
<ListItem>:
    BoxLayout:
        pos: root.pos
        size: root.size
        orientation: 'horizontal'
        size_hint: (1, None)
        padding: 0
        spacing: 2
        Button:
            text: '-'
            on_press: root.remove_item()
            height: header_height
            width: 30
            size_hint: (None, None)
        Button:
            text: root.item_info
            on_press: root.item_callback()
            background_color: (0,0,1,1) if root.item_state=='down' else (1,1,1,1)
            height: header_height
            size_hint: (1, None)

<LoadDialog>:
    filechooser: filechooser
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)

<SaveDialog>:
    filechooser: filechooser
    text_input: text_input
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            on_selection: text_input.text = self.selection and self.selection[0] or ''

        TextInput:
            id: text_input
            size_hint_y: None
            height: 30
            multiline: False

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Save"
                on_release: root.save(filechooser.path, text_input.text)

[Header@Widget]:
    id: label_bg
    size_hint: (1, None)
    height: header_height
    canvas:
        Color:
            rgb: box_color
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        text: ctx.text
        color: txt_color
        pos: label_bg.pos
        size: label_bg.size

[BoxWithHeader@BoxLayout]:
    listbox: listbox
    orientation: 'vertical'
    spacing: grid_spacing
    padding: grid_spacing
    size_hint: ctx.size_hint
    canvas:
        Color:
            rgb: box_color
        Rectangle:
            pos: self.pos
            size: self.size
    Header:
        text: ctx.title
    VariableBox:
        id: listbox
        size_hint: (1,1)
    BoxLayout:
        size_hint: (1, None)
        height: 32
        padding: grid_spacing
        orientation: 'horizontal'
        Widget:
            size_hint: (1,1)
        Button:
            background_normal: 'assets/plus32.png'
            background_down: 'assets/plus32-purple.png'
            size_hint: (None, None) 
            size: (32, 32)
            on_release: ctx.add_button_callback()
        Button:
            background_normal: 'assets/minus32.png'
            size_hint: (None, None) 
            size: (32, 32)
            on_release: ctx.remove_button_callback()

[BoxWithHeaderNoAdd@BoxLayout]:
    listbox: listbox
    orientation: 'vertical'
    spacing: grid_spacing
    padding: grid_spacing
    size_hint: ctx.size_hint
    size: ctx.size if hasattr(ctx, 'size') else (100,100)
    canvas:
        Color:
            rgb: box_color
        Rectangle:
            pos: self.pos
            size: self.size
    Header:
        text: ctx.title
    VariableBox:
        id: listbox
        size_hint: (1,1)

<BoutIDBox>:
    listbox: listbox
    orientation: 'vertical'
    spacing: grid_spacing
    padding: grid_spacing
    canvas:
        Color:
            rgb: box_color
        Rectangle:
            pos: self.pos
            size: self.size
    Header:
        text: "Bout Identification"
    BoxLayout:
        orientation: 'horizontal'
        size_hint: (1, None)
        height: 32
        Label:
            size_hint: (.35, 1)
            text: "Threshold: " + str(round(sl1.value, 1))+ "s"
        Slider:
            size_hint: (.65, 1)
            id: sl1
            min: 0
            max: 20
            value: 1.
            on_value: root.set_threshold(self.value)

    VariableBox:
        id: listbox
        size_hint: (1,1)


<TransitionIDBox>:
    listbox: listbox
    orientation: 'vertical'
    spacing: grid_spacing
    padding: grid_spacing
    canvas:
        Color:
            rgb: box_color
        Rectangle:
            pos: self.pos
            size: self.size
    Header:
        text: "Transition Identification"
    BoxLayout:
        orientation: 'horizontal'
        size_hint: (1, None)
        height: 32
        Label:
            size_hint: (.35, 1)
            text: "Threshold: " + str(round(sl2.value, 1))+ "s"
        Slider:
            size_hint: (.65, 1)
            id: sl2
            min: 0
            max: 10
            value: 1.
            on_value: root.set_threshold(self.value)
    VariableBox:
        id: listbox
        size_hint: (1,1)
    BoxLayout:
        size_hint: (1, None)
        height: 32
        padding: grid_spacing
        orientation: 'horizontal'
        Widget:
            size_hint: (1,1)
        Button:
            background_normal: 'assets/plus32.png'
            background_down: 'assets/plus32-purple.png'
            size_hint: (None, None) 
            size: (32, 32)
            on_release: root.add_variable_pair()
        Button:
            background_normal: 'assets/minus32.png'
            size_hint: (None, None) 
            size: (32, 32)
            on_release: root.remove_button_callback()

<EventMatchingBox>:
    listbox: listbox
    orientation: 'vertical'
    spacing: grid_spacing
    padding: grid_spacing
    canvas:
        Color:
            rgb: box_color
        Rectangle:
            pos: self.pos
            size: self.size
    Header:
        text: "Event Matching"
    BoxLayout:
        orientation: 'horizontal'
        size_hint: (1, None)
        height: 32
        Label:
            size_hint: (.1, 1)
            text: str(round(ds.value, 1))+ "s"
        DoubleSlider:
            id: ds
            size_hint: (.8, 1)
            min: -10
            max: 10
            mid: 0
            value: -2.
            on_value: root.set_before_threshold(self.value)
            value2: 2.
            on_value2: root.set_after_threshold(self.value2)
        Label:
            size_hint: (.1, 1)
            text: str(round(ds.value2, 1))+ "s"
    VariableBox:
        id: listbox
        size_hint: (1,1)


[BoxWithHeader2@BoxLayout]:
    listbox: listbox
    orientation: 'vertical'
    spacing: grid_spacing
    size_hint: ctx.size_hint
    Header:
        text: ctx.title
    VariableBox:
        id: listbox
        size_hint: (1,1)

[BoxWithHeader3@BoxLayout]:
    orientation: 'vertical'
    spacing: grid_spacing
    size_hint: ctx.size_hint
    Header:
        text: ctx.title
    VariablePairsBox:
        size_hint: (1,1)
