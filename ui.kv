#:kivy 1.0.9

#:set bg_color (.8, .8, .8)
#:set box_color (.6, .6, .6)
#:set txt_color (0, 0, 0, 1)



<MainView>:
    canvas:
        Color:
            rgb: bg_color
        Rectangle:
            pos: root.pos
            size: root.size
    BoxLayout:
        pos: root.pos
        size: root.size
        orientation: 'vertical'
        padding: 5
        spacing: 5

        # layout containing the five list boxes on the top row
        BoxLayout:
            size_hint: (1, .33)
            orientation: 'horizontal'
            spacing: 5
            padding: 5
            ListBox:
                size_hint: (.2, 1)
            ListBox:
                size_hint: (.2, 1)
            BoxLayout:
                orientation: 'vertical'
                spacing: 5
                size_hint: (.6, 1)
                Widget:
                    id: input_files_label_bg
                    size_hint: (1, None)
                    height: 24
                    canvas:
                        Color:
                            rgb: box_color
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    Label:
                        text: "Input Files"
                        color: txt_color
                        pos: input_files_label_bg.pos
                        size: input_files_label_bg.size
                BoxLayout:
                    size_hint: (1, 1)
                    orientation: 'horizontal'
                    spacing: 5
                    ListBox:
                        size_hint: (.33, 1)
                    ListBox:
                        size_hint: (.33, 1)
                    ListBox:
                        size_hint: (.33, 1)



        # layout containing the processing options
        BoxLayout:
            size_hint: (1, .33)
            orientation: 'horizontal'
            spacing: 5
            padding: 5

        # layout containing the visualization panel
        BoxLayout:
            size_hint: (1, .33)
            orientation: 'horizontal'
            spacing: 5
            padding: 5

<ListBox>:
    canvas:
        Color:
            rgb: box_color
        Rectangle:
            pos: root.pos
            size: root.size